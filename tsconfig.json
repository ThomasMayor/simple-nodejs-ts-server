{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "removeComments": true,
    "lib": [
      "dom",
      "ES2015",
      "es5"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es6",
    "outDir": "dist"
  },
  "include": [
    "server/**/*.ts",
    "server.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test-config/",
    "test"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
